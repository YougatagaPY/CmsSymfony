{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="dashboard-welcome">
        <h1>Bienvenue dans l'administration du CMS</h1>
        <p>Utilisez le menu à gauche pour gérer votre site.</p>
    </div>

    <div class="dashboard-stats mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card {% if pending_comments > 0 %}bg-warning-subtle{% else %}bg-light{% endif %} mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Commentaires en attente</h5>
                        <p class="card-text fs-1">{{ pending_comments }}</p>
                        {% if pending_comments > 0 %}
                            <a href="{{ ea_url()
                                .setController('App\\Controller\\Admin\\CommentCrudController')
                                .setAction('index')
                                .set('filters[status][comparison]', '=')
                                .set('filters[status][value]', 'pending') }}" 
                               class="btn btn-warning">
                                <i class="fa fa-check-circle"></i> Modérer les commentaires
                            </a>
                        {% else %}
                            <span class="text-success"><i class="fa fa-check-circle"></i> Tout est à jour !</span>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <!-- Tu peux ajouter d'autres statistiques ici -->
        </div>
    </div>
    
    <div class="dashboard-quick-access mt-4">
        <h2>Accès rapide</h2>
        <div class="row mt-3">
            <div class="col-md-3">
                <a href="{{ ea_url().setController('App\\Controller\\Admin\\ArticleCrudController').setAction('new') }}" class="card text-decoration-none text-dark mb-3">
                    <div class="card-body text-center">
                        <i class="fa fa-newspaper fa-2x mb-3 text-primary"></i>
                        <h5 class="card-title">Nouvel article</h5>
                    </div>
                </a>
            </div>
            
            <div class="col-md-3">
                <a href="{{ ea_url().setController('App\\Controller\\Admin\\PageCrudController').setAction('new') }}" class="card text-decoration-none text-dark mb-3">
                    <div class="card-body text-center">
                        <i class="fa fa-file fa-2x mb-3 text-primary"></i>
                        <h5 class="card-title">Nouvelle page</h5>
                    </div>
                </a>
            </div>
            
            <div class="col-md-3">
                <a href="{{ ea_url().setController('App\\Controller\\Admin\\GalleryCrudController').setAction('new') }}" class="card text-decoration-none text-dark mb-3">
                    <div class="card-body text-center">
                        <i class="fa fa-images fa-2x mb-3 text-primary"></i>
                        <h5 class="card-title">Nouvelle galerie</h5>
                    </div>
                </a>
            </div>
            
            <div class="col-md-3">
                <a href="{{ ea_url().setController('App\\Controller\\Admin\\ImageCrudController').setAction('new') }}" class="card text-decoration-none text-dark mb-3">
                    <div class="card-body text-center">
                        <i class="fa fa-image fa-2x mb-3 text-primary"></i>
                        <h5 class="card-title">Nouvelle image</h5>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}