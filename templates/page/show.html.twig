{# templates/page/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}

{% block meta %}
    {% if page.meta %}
        <meta name="description" content="{{ page.meta|raw }}">
    {% endif %}
    {% if page.metaKeyword %}
        <meta name="keywords" content="{{ page.metaKeyword|raw }}">
    {% endif %}
{% endblock %}

{% block body %}
    <h1>{{ page.title }}</h1>
    
    {# Afficher l'image mise en avant si elle existe #}
    {% if page.featuredImage %}
        <div class="featured-image">
            <img src="{{ page.featuredImage.image }}" alt="{{ page.featuredImage.caption|default(page.title) }}" class="img-fluid">
            {% if page.featuredImage.caption %}
                <div class="image-caption">{{ page.featuredImage.caption }}</div>
            {% endif %}
        </div>
    {% endif %}
    
    {# Afficher la galerie complète si elle est sélectionnée #}
    {% if page.gallery %}
        <div class="page-gallery">
            <h2>{{ page.gallery.title }}</h2>
            
            {% if page.gallery.images is not empty %}
                <div class="gallery-grid">
                    {% for image in page.gallery.images %}
                        <div class="gallery-item">
                            <img src="{{ image.image }}" alt="{{ image.caption|default('') }}" class="img-fluid">
                            {% if image.caption %}
                                <div class="image-caption">{{ image.caption }}</div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>Cette galerie ne contient pas encore d'images.</p>
            {% endif %}
        </div>
    {% endif %}
    
    <div class="page-content">
        {{ page.content|raw }}
    </div>
    
    <div class="page-meta">
        <p class="created-at">
            Créé le : {{ page.createdAt|date('d/m/Y') }}
            {% if page.createdAt != page.updateAt %}
                <br>Dernière modification : {{ page.updateAt|date('d/m/Y') }}
            {% endif %}
        </p>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .featured-image {
            margin-bottom: 2rem;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
        }
        
        .featured-image img {
            width: 100%;
            height: auto;
            display: block;
        }
        
        .image-caption {
            padding: 1rem;
            background-color: rgba(0, 0, 0, 0.05);
            font-style: italic;
            color: #475569;
        }
        
        .page-gallery {
            margin: 2rem 0;
            padding: 1.5rem;
            background-color: #f8fafc;
            border-radius: 8px;
        }
        
        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            grid-gap: 1.5rem;
            margin: 1.5rem 0;
        }
        
        .gallery-item {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.03);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .gallery-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
        }
        
        .gallery-item img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            display: block;
        }
        
        @media (max-width: 768px) {
            .gallery-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        
        @media (max-width: 576px) {
            .gallery-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}